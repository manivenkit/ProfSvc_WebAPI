      <Reference Include="Sovren.SDK">
        <HintPath>..\Ref\Sovren.SDK.dll</HintPath>
      </Reference>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Data\" />
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
